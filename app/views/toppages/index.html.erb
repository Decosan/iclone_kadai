<% if logged_in? %>
<h2 style='color: blue;'>Login User: <%= current_user.name %></h2>

<%= form_with(model: @post,local: true)do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="post_group">
    <%= f.label :title, 'title' %>
    <%= f.text_field :title, class:'form-control' %>
  </div>

  <div class="post_group">
    <%= f.label :content, 'content' %>
    <%= f.text_area :content, class:'form-control',row:2 %>
  </div>

  <div class="post_group">
    <%= f.label :image %>
    <%= image_tag @post.image.thumb.url if @post.image? %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>

  <%= f.submit 'Create New Post', class:'btn btn-primary btn-md' %>
<% end %>

<%= render 'posts/posts', posts: @posts %>

<% else %>
  <div class="jumbotron">
  	<h1>iclone</h1>
  	<p>Please feel free to post your day!!</p>
  	<p><a class="btn btn-primary btn-lg" href="./signup" role="button">Sign up Now!!</a></p>
  </div>
<% end %>
